<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="540dp">

        <View
            android:id="@+id/view1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@+id/bas"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/haut"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_above="@id/view1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fleche_haut" />

        <Button
            android:id="@+id/bas"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/fleche_bas" />

        <Button
            android:id="@+id/gauche"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignTop="@id/view1"
            android:layout_toLeftOf="@id/view1"
            android:background="@drawable/fleche_gauche" />

        <Button
            android:id="@+id/droite"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignTop="@id/view1"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/view1"
            android:background="@drawable/fleche_droite" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>